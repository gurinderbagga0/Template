
<div class="modal fade" id="modalUserDetail" tabindex="-1" role="dialog" aria-labelledby="UserDetail" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">User Detail Information</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4">Name </div>
                    <div class="col-md-8">@dsdProjectTemplate.Utility.UserSession.Current.FullName</div>
                </div>
                <div class="row">
                    <div class="col-md-4">Username </div>
                    <div class="col-md-8">@dsdProjectTemplate.Utility.UserSession.Current.UserName</div>
                </div>
                <div class="row">
                    <div class="col-md-4">Email </div>
                    <div class="col-md-8">@dsdProjectTemplate.Utility.UserSession.Current.Email</div>
                </div>
                <div class="row">
                    <div class="col-md-4">Organization </div>
                    <div class="col-md-8">@dsdProjectTemplate.Utility.UserSession.Current.SelectedOrgName</div>
                </div>
                <div class="row">
                    <div class="col-md-4">Role </div>
                    @if (dsdProjectTemplate.Utility.UserSession.Current.IsSuperAdmin)
                    {
                        <div class="col-md-8">Super Admin</div>
                    }
                    else
                    {
                        <div class="col-md-8">@dsdProjectTemplate.Utility.UserSession.Current.Roles</div>
                    }

                </div>
            </div>
            <div class="modal-footer">
                
                <button type="button" class="btn btn-info " data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>