                    </table>
        }
        }

@*task3Description*@      
@if(Model.itemDetail.task3Description != null){          
 <table border="0" width="100%" cellspacing="0" cellpadding="0">
                <tr valign="top">
                    
                  @if (documentStatus == "offer")
                      {
                       <td width="5%" align="center">
                           <img src="~/Images/checkbox.jpg" border="0"/>&nbsp;&nbsp;
                       </td>
                  }

                  @if (documentStatus == "offer")
                      {
                         <td width="68%">
                               <font face="Times New Roman" size="@fontSize">
                                  @Html.Raw(Model.itemDetail.task3Description)
                                   @if(Model.itemDetail.task3Decline=="1")
                                   {
                                        @Html.Raw("&nbsp;&nbsp;<b>(Declined by client)</b>")
                                   }
                               </font>
                         </td>
                      }
                      else
                       {
                          <td width="78%"> 
                                  <font face="Times New Roman" size="@fontSize">
                                  @Html.Raw(Model.itemDetail.task3Description)
                                   @if(Model.itemDetail.task3Decline=="1")
                                   {
                                        @Html.Raw("&nbsp;&nbsp;<b>(Declined by client)</b>")
                                   }

                               </font>
                          </td>
                       } 
  
                       <td width="6%" valign="top">&nbsp;</td>
                       <td width="16%" valign="top"  align="right">
                           @if (displayPrice != "noPrice")
                           {
                                 <font face="Times New Roman" size="@fontSize">
                                        @if(Model.itemDetail.task3Decline=="1")
                                   {
                                            <strike>@String.Format("{0:C}",(Model.itemDetail.task3Price==null?0:Convert.ToDecimal(Model.itemDetail.task3Price)))</strike>
                                   }
                                   else{
                                            @String.Format("{0:C}",(Model.itemDetail.task3Price==null?0:Convert.ToDecimal(Model.itemDetail.task3Price)))
                                        }  

                                 </font>
                           }
                          
                       </td>
                </tr>
                @if (rowSpacer == "rowSpacer") { @Html.Raw("<tr><td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td></tr>")}
            </table>  
}          
