@model Wempe.Models.CustomerReceiptEnvelope
@{
    Layout = null;
}
@{
    string documentStatus = this.ViewData.ContainsKey("documentStatus") ? this.ViewData["documentStatus"].ToString() : string.Empty;
    string document = this.ViewData.ContainsKey("document") ? this.ViewData["document"].ToString() : string.Empty;
    string fontSize = this.ViewData.ContainsKey("fontSize") ? this.ViewData["fontSize"].ToString() : string.Empty;
    string displayPrice = this.ViewData.ContainsKey("displayPrice") ? this.ViewData["displayPrice"].ToString() : string.Empty;
    string lastLineSpacer = this.ViewData.ContainsKey("lastLineSpacer") ? this.ViewData["lastLineSpacer"].ToString() : string.Empty;
    string rowSpacer = this.ViewData.ContainsKey("rowSpacer") ? this.ViewData["rowSpacer"].ToString() : string.Empty;
}
@{
        if (documentStatus == "offer")
             {
                 	<p><font face="Times New Roman" size="@fontSize">
                    <b>*The following work is optional:</b></p>
             } 
          
            
                
     if(documentStatus == "offer")
        { 
                 <table border="0" width="100%" cellspacing="0" cellpadding="0">
                   <tr>
                       <td width="5%" align="center">
                           <font face="Times New Roman" size="@fontSize"><b>Yes</b>&nbsp;&nbsp;</font>
                       </td>
                       <td width="5%" align="center">
                           <font face="Times New Roman" size="@fontSize"><b>No</b>&nbsp;&nbsp;</font>
                       </td>
                       <td width="68%">&nbsp;</td>
                       <td width="6%">&nbsp;</td>
                       <td width="16%">&nbsp;</td>
