<!-- BEGIN PAGE CONTENT-->


<div class="row">
    <div class="col-md-12">
        <div class="portlet">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-grid"></i>Search Filters
                </div>
                <div class="actions">
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-container">
                    <table class="table table-striped table-bordered table-hover" id="datatable_Brands">
                        <thead>
                            <tr role="row" class="heading">
                                <th width="40%">Name 
                                </th>
                                <th width="10%">Actions
                                </th>
                            </tr>
                            <tr role="row" class="filter">
                                <td>
                                    <input type="text" class="form-control form-filter input-sm" id="txtSearchName">
                                </td>
                                <td class="mw_130">
                                    <div class="margin-bottom-5">
                                        <button class="btn btn-sm yellow filter-submit margin-bottom" onclick="getList(1);"><i class="fa fa-search"></i>Search</button>
                                
                                    <a  href="../User/create"> <button class="btn btn-sm green" ><i class="fa fa-check"></i>Add New</button></a>
                                    </div>
                                </td>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <!-- End: life time stats -->


        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box blue-hoki">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-grid"></i> Listing
                </div>
                <div class="tools">

                    <select id="ddlUserList" class="form-control">
                        <option value="2">All Users</option>
                        <option value="1" selected="selected">Active Users</option>
                    </select>
                </div>
            </div>
            <div class="portlet-body">
                <input type="hidden" id="hdnPageNo" value="1" />

                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-hover" id="sample_1">
                        <thead>
                            <tr>
                                <th class="sort" onclick="setSorting(this,'UserName',[0,1,3]);">Name
                                </th>

                                <th class="sort" onclick="setSorting(this,'Role',[0,1,3]);">
                                    Role
                                </th>


                                <th class="sort" onclick="setSorting(this, 'EmailAddress', [0, 1, 3]);">E-mail (Login Id)
                                </th>

                               


                                <th class="sort" onclick="setSorting(this, 'ContactNumber', [0, 1, 3]);">
                                    Contact Number
                                </th>
                                 <th class="sort" onclick="setSorting(this,'LastUpdate',[0,1,3]);">
                                   Update Date
                                </th>
                                <th class="sort" onclick="setSorting(this, 'IsActive', [0, 1, 3]);">Is Active
                                </th>

                                <th>Edit</th>
                                <th>Password</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyDetails">
                        </tbody>
                    </table>
                </div>

                <div class="row">
                    <div class="col-md-5 col-sm-12">
                        <div class="dataTables_info" id="sample_1_info" role="status" aria-live="polite"></div>
                    </div>
                    <div class="col-md-7 col-sm-12">
                        <div class="dataTables_paginate paging_simple_numbers" id="sample_1_paginate">
                            <ul class="pagination">
                                <li class="paginate_button previous" aria-controls="sample_1" tabindex="0" id="sample_1_previous"><a><i class="fa fa-angle-left"></i></a></li>
                                <li class="paginate_button next" aria-controls="sample_1" tabindex="0" id="sample_1_next"><a><i class="fa fa-angle-right"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <script id="tbodyTemplate" type="text/html">
                    <tr>
                        <td>${employee}
                        </td>

                        <td>
                            ${Role}
                        </td>


                        <td>${EmailAddress}
                        </td>
                        <td>${ContactNumber}
                        </td>
                         <td>${LastUpdate}
                        </td>
                        <td>${IsActive}
                        </td>
                        <td>
                            @*<a  onclick="Edit(${CompanyID});" class="btn default btn-xs blue-stripe">Edit </a>*@
                            <a href="../User/Edit/${Id}" class="btn default btn-xs blue-stripe">Edit </a>    
                        </td>

                        <td>
                         
                            <a onclick='ResetPassword("${Id}")' class="btn default btn-xs blue-stripe">Reset Password </a>
                        </td>
                    </tr>
                </script>

            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>
<input type="hidden" value="0" id="hdnUserResetPassword" />
 <!-- END PAGE CONTENT-->
<script>

    function ResetPassword(UserID) {

        $('#hdnUserResetPassword').val(UserID);
        var $modal = $('#changePasswordPopup');
        $modal.modal();


    }

</script>
