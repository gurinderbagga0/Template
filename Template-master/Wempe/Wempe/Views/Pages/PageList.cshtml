@model Wempe.Models.PagedData<Wempe.wmpWebsitePage>

<!-- BEGIN EXAMPLE TABLE PORTLET-->
<div class="portlet box blue-hoki">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-grid"></i>Page Listing
        </div>
        <div class="actions">
            @*<a class="btn btn-default btn-sm" >
                                                    <i class="fa fa-reply"></i>Delete All </a>*@
            <a  href="Create" class="btn green">
                <i class="fa fa-pencil"></i>Add new </a>
        </div>

    </div>
    <div class="portlet-body">
        <input type="hidden" id="hdnPageNo" value="1" />
        <div class="table-scrollable">
            <table class="table table-striped table-bordered table-hover" >
                <thead>
                    <tr>
                        <th>  Name
                        </th>
                      
                        <th>
                           Page Name
                        </th>
                        <th width="23%">Action</th>
                    </tr>
                </thead>
                <tbody id="tbodyDetails">
                    @foreach (var person in Model.Data)
                    {
                        <tr>
                            <td>
                                @person.PageName
                            </td>
                           
                            <td>
                                @person.PageTitle
                            </td>
                            <td>
                                <a href="Edit/@person.PageID" class="btn default btn-xs blue-stripe" >
                                    <i class="fa fa-edit"></i>Edit </a>| 
							    <a href="#"  class="btn default btn-xs black" onclick="ConfirmClick(@person.PageID);">
                                    <i class="fa fa-trash-o"></i>Delete </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col-md-5 col-sm-12">
                <div class="dataTables_info" id="sample_1_info" role="status" aria-live="polite"></div>
            </div>
            <div class="col-md-7 col-sm-12">
                <div class="dataTables_paginate paging_simple_numbers" id="sample_1_paginate">
                    @for (int i = 1; i <= Model.NumberOfPages; i++)
                    {
                        <a class="page-number" href="#">@i</a>
                    }
                </div>
            </div>
        </div>

    </div>
</div>

<!-- END EXAMPLE TABLE PORTLET-->
