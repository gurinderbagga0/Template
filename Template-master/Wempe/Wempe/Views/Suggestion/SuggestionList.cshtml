@{
    ViewBag.Title = "SuggestionList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="#">Home</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">Suggestion List</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER-->
<div id="Appraiser-list">

    <!-- BEGIN PAGE CONTENT-->


    <div class="row">
        <div class="col-md-12">
            <div class="portlet">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-grid"></i>Search Filters
                    </div>
                    <div class="actions">
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-container">
                        <table class="table table-striped table-bordered table-hover" id="datatable_Brands">
                            <thead>
                                <tr role="row" class="heading">
                                    <th width="40%">
                                        Name
                                    </th>
                                    <th width="10%">
                                        Actions
                                    </th>
                                </tr>
                                <tr role="row" class="filter">
                                    <td>
                                        <input type="text" class="form-control form-filter input-sm" id="txtSearchName">
                                    </td>
                                    <td class="mw_130">
                                        <div class="margin-bottom-5">
                                            <button class="btn btn-sm yellow filter-submit margin-bottom" onclick="getList(1);"><i class="fa fa-search"></i>Search</button>

                                            @*<a href="../User/create"> <button class="btn btn-sm green"><i class="fa fa-check"></i>Add New</button></a>*@
                                        </div>
                                    </td>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
            <!-- End: life time stats -->
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet box blue-hoki">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-grid"></i> Listing
                    </div>
                    <div class="tools">


                    </div>
                </div>
                <div class="portlet-body">
                    <input type="hidden" id="hdnPageNo" value="1" />

                    <div class="table-scrollable">
                        <table class="table table-striped table-bordered table-hover" id="sample_1">
                            <thead>
                                <tr>
                                    @*<th>
                                        Suggestion Id
                                    </th>*@

                                    <th  class="sort" onclick="setSorting(this, 'UserName', [0, 1]);">
                                        Posted By
                                    </th>

                                    <th class="sort" onclick="setSorting(this, 'Suggestion', [0, 1]);">
                                        Suggestion
                                    </th>
                                    <th  class="sort" onclick="setSorting(this, 'TimeStamp', [0, 1]);">
                                        Time Stamp
                                    </th>

                                  

                                    <th class="sort" onclick="setSorting(this, 'CompanyName', [0, 1]);">
                                        Company Name
                                    </th>

                                </tr>
                            </thead>
                            <tbody id="tbodyDetails"></tbody>
                        </table>
                    </div>

                    <div class="row">
                        <div class="col-md-5 col-sm-12">
                            <div class="dataTables_info" id="sample_1_info" role="status" aria-live="polite"></div>
                        </div>
                        <div class="col-md-7 col-sm-12">
                            <div class="dataTables_paginate paging_simple_numbers" id="sample_1_paginate">
                                <ul class="pagination">
                                    <li class="paginate_button previous" aria-controls="sample_1" tabindex="0" id="sample_1_previous"><a><i class="fa fa-angle-left"></i></a></li>
                                    <li class="paginate_button next" aria-controls="sample_1" tabindex="0" id="sample_1_next"><a><i class="fa fa-angle-right"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <script id="tbodyTemplate" type="text/html">
                        <tr>
                            @*<td>
                                ${SuggestionId}
                            </td>*@

                            <td>
                                ${UserName}
                            </td>


                            <td>
                                ${Suggestion}
                            </td>
                            <td>
                                ${TimeStamp}
                            </td>


                            


                            <td>
                                ${CompanyName}
                            </td>

                        </tr>
                    </script>

                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>
    <!-- END PAGE CONTENT-->




</div>



<!-- BEGIN PAGE LEVEL STYLES onclick="Add();"-->
<link href="~/Content/themes/admin/plugins/bootstrap-modal/css/bootstrap-modal-bs3patch.css" rel="stylesheet" type="text/css" />
<link href="~/Content/themes/admin/plugins/bootstrap-modal/css/bootstrap-modal.css" rel="stylesheet" type="text/css" />
<!-- END PAGE LEVEL STYLES -->
@section scripts{

    <script src="~/Content/themes/admin/plugins/bootstrap-modal/js/bootstrap-modalmanager.js" type="text/javascript"></script>
    <script src="~/Content/themes/admin/plugins/bootstrap-modal/js/bootstrap-modal.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <script src="~/Content/themes/admin/pages/scripts/ui-extended-modals.js"></script>
    <script src="~/Scripts/MasterJs/Suggestion.js"></script>

    <script>
        jQuery(document).ready(function () {
            // activemenu('WEMPE_Company');


            $('#ManagList').addClass('open');
            $('#liReports').addClass('open');
            $('#liReports').find('span').addClass('open');


            $('#ManagList').find('.sub-menu:first').css('display', 'block');

            $('#liReports').find('.sub-menu').css('display', 'block');


            $('#spnArrowManageListMain').addClass('open');

            activemenu('SuggestionList');



            _sortColumn = 'LastUpdate';
            _sortOrder = 'DESC';
            getList(1);

            Metronic.init(); // init metronic core components
            Layout.init(); // init current layout
            QuickSidebar.init(); // init quick sidebar
            Demo.init(); // init demo features
            UIExtendedModals.init();
            //UIToastr.init();
        });


    </script>
}
