<!-- BEGIN LOGIN -->
<div class="LoginOuter">
    
<div class="content" style="background-color:#fff">
    
	<!-- BEGIN LOGIN FORM -->
@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "login-form" }))
 {  @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
		<div class="LogoSection">
            @*<img src="~/Images/logo.png" />*@

            <img src="..\Content\themes\admin\layout\img\logo_login.png" />
        </div>
		<div class="alert alert-danger display-hide">
			<button class="close" data-close="alert"></button>
			<span>
                
                @Html.HiddenFor(model=>model.ReturnUrl)
			Enter any username and password. </span>
		</div>
		<div class="form-group">
			<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
			<label class="control-label visible-ie8 visible-ie9">Username</label>
		    @Html.TextBoxFor(Model => Model.EmailAddress, new {placeholder="Username",autocomplete="off", @class="form-control form-control-solid placeholder-no-fix", @style="text-transform:none;"
 })
               @Html.ValidationMessageFor(model => model.EmailAddress)
		</div>
		<div class="form-group">
			<label class="control-label visible-ie8 visible-ie9">Password</label>
		      @Html.PasswordFor(Model => Model.Password, new { placeholder="password",autocomplete="off", @class="form-control form-control-solid placeholder-no-fix" })
            @Html.ValidationMessageFor(model => model.Password)
        
        </div>
		<div class="form-actions">
			<button type="submit" class="btn btn-success uppercase">Sign In</button>


           


            <a href="javascript:;" id="forget-password" class="forget-password">Forgot Password?</a>
			<label class="rememberme check">
			@*<input type="checkbox" name="remember" value="1"/>Remember </label>*@
            
			
          
       
                <div style="color:red;">     @Html.ValidationMessage("LogOnError") </div>
		</div>

        <div class="form-actions">
            @*<button type="submit" class="btn btn-success uppercase">Get Repair Status</button>*@
            @*<input type="button" value="Get Repair Status" class="btn btn-success uppercase" />*@
            <a href="@Url.Action("TrackRepair", "TrackRepairStatus")" class="btn btn-success uppercase"> Get Repair Status</a>

            </div>


            }
            <!-- END LOGIN FORM -->
            <!-- BEGIN FORGOT PASSWORD FORM -->
            <div id="ForgotPassword" class="forget-form">
                <h3>Forgot Password ?</h3>
                <p>
                    Enter your e-mail address below to get your password on mail.
                </p>
                <div class="form-group">
                    <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Email" id="forgotEmailAddress" style="text-transform:none;" />
                </div>
                <div class="form-actions">
                    <button type="button" id="back-btn" class="btn btn-default">Back</button>
                    <button type="submit" id="forgot-btn" class="btn btn-success uppercase pull-right">Submit</button>
                </div>
            </div>
            <!-- END FORGOT PASSWORD FORM -->

        </div>
    </div>
    <!-- <div>
        <img src="~/Images/The_Wempe_Watch_Service.png" style="width:100%"/>
    </div>-->
@*<div class="copyright">
	 2014 © WEMPE login.
</div>*@
    @Scripts.Render("~/bundles/jqueryval")
    
<!-- END LOGIN -->
