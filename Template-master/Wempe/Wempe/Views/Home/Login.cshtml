<script src="~/Content/themes/admin/pages/scripts/login.js" type="text/javascript"></script>
    <script src="~/Scripts/adminJs/Setting.js"></script>
    <script src="~/Scripts/adminJs/User.js"></script>
<!-- END PAGE LEVEL SCRIPTS -->
<script>
    jQuery(document).ready(function () {
        Metronic.init(); // init metronic core components
        Layout.init(); // init current layout
        Login.init();
    });

    $('#EmailAddress').keypress(function () {
        $('#EmailAddress').next('span').css('display', 'none');
    });

    $('#EmailAddress').focusout(function () {
        $('#EmailAddress').next('span').css('display', 'block');
    });


</script>
