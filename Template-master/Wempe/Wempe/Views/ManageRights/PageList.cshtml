<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-12">
        <div class="portlet">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-grid"></i>Search Filters
                </div>
                <div class="actions">
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-container">
                    <table class="table table-striped table-bordered table-hover" id="datatable_Brands">
                        <thead>
                            <tr role="row" class="heading">

                                <th width="30%">Name
                                </th>
                                 <th width="10%">Roles
                                </th>
                                <th width="10%">Actions
                                </th>
                            </tr>
                            <tr role="row" class="filter">
                                <td>
                                    <input type="text" class="form-control form-filter input-sm" id="txtSearchName">
                                </td>
                                <td>
                                    @Html.DropDownList("Roles", (IEnumerable<SelectListItem>)ViewBag.Roles, new { @class="form-control",onchange = "getList(1);" })
                                </td>
                                <td>
                                    <div class="margin-bottom-5">
                                        <button class="btn btn-sm yellow filter-submit margin-bottom" onclick="getList(1);"><i class="fa fa-search"></i>Search</button>
                                
                                        <a onclick="update();" > <button class="btn btn-sm green" ><i class="fa fa-check"></i>Update</button></a>
                                    </div>

                                </td>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <!-- End: life time stats -->

        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box blue-hoki">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-grid"></i> Listing
                </div>
                <div class="tools">
                    <select id="ddlActiveAllList" class="form-control">
                        <option value="2">All</option>
                        <option value="1" selected="selected">Active</option>
                    </select>
                </div>
            </div>
            <div class="portlet-body">
                <input type="hidden" id="hdnPageNo" value="1" />
                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-hover" id="sample_1">
                        <thead>
                            <tr>
                                <th class="sort" onclick="setSorting(this,'ControllerName',[0,1]);">Controller Name
                                </th>
                                <th class="sort" onclick="setSorting(this,'ActionName',[0,1]);">Action Name
                                </th>
                                  <th >
                                      <input type="checkbox" id="allcb" name="allcb"/>
                                      Access
                                </th>
                                  <th >Roles
                                </th>
                             @*   <th class="sort" onclick="setSorting(this,'LastUpdate',[0,1,2,3]);">Update date
                                </th>
                                <th width="10%" >Updated by
                                </th>
                              

                                <th>Action</th>*@
                            </tr>
                        </thead>
                        <tbody id="tbodyDetails">
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-md-5 col-sm-12">
                        <div class="dataTables_info" id="sample_1_info" role="status" aria-live="polite"></div>
                    </div>
                    <div class="col-md-7 col-sm-12">
                        <div class="dataTables_paginate paging_simple_numbers" id="sample_1_paginate">
                            <ul class="pagination">
                                <li class="paginate_button previous" aria-controls="sample_1" tabindex="0" id="sample_1_previous"><a><i class="fa fa-angle-left"></i></a></li>
                                <li class="paginate_button next" aria-controls="sample_1" tabindex="0" id="sample_1_next"><a><i class="fa fa-angle-right"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <script id="tbodyTemplate" type="text/html">
                    <tr>
                        <td>${ControllerName}
                        </td>
                        <td>${ActionName}
                        </td>
                        <td>
                            {{if Access==true}}
                                <input type="checkbox" id="${ActionID}" checked class="chk" />
                            {{else}}
                                <input type="checkbox" id="${ActionID}"  class="chk" />
                            {{/if}}
                            
                        </td>
                        <td>${role}
                        </td>
                      @*  <td>${LastUpdate}
                        </td>
                        <td>${UpdateByUserName}
                        </td>
                        
                        <td>
                            <a  onclick="Edit(${ActionID});" class="btn default btn-xs blue-stripe">Edit </a>
                        </td>*@
                    </tr>
                </script>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>
<!-- END PAGE CONTENT-->
