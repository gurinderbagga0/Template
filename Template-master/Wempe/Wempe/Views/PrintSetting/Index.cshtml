@model Wempe.wmpPrintSetting
@{
    ViewBag.Title = "Print setting";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="#">Home</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">Print setting</a>
        </li>
    </ul>

</div>

<!-- END PAGE HEADER-->
<div >
    <!-- BEGIN PAGE CONTENT-->
<div class="form-horizontal">
    <div class="form-body">
        
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label col-md-3">Top Margin(PX)</label>
                    <div class="col-md-6">
                     @Html.TextBoxFor(model => model.PaperTopMargin, new {@class="form-control" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label col-md-4">Bottom Margin(PX)</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(model=>model.PaperBottomMargin, new {@class="form-control" })
                    </div>
                </div>
            </div>
        
        </div>
      
    <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label col-md-3">Left Margin(PX)</label>
                    <div class="col-md-6">
                     @Html.TextBoxFor(model=>model.PaperLeftMargin, new {@class="form-control" })
                    </div>
                </div>
            </div>
                <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label col-md-4">Right Margin(PX)</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(model=>model.PaperRightMargin, new {@class="form-control" })
                    </div>
                </div>
            </div>
        </div>

        
    </div>
    <div class="text-center">
                       <button class="btn green" type="submit" onclick="Add();"><i class="fa fa-check"></i>Save</button>
                    <input type="hidden" id="hdnid" value="@Model.SettingID" />
        </div>
</div>
</div>
@section scripts{
<script src="~/Content/themes/admin/plugins/bootstrap-modal/js/bootstrap-modalmanager.js" type="text/javascript"></script>
<script src="~/Content/themes/admin/plugins/bootstrap-modal/js/bootstrap-modal.js" type="text/javascript"></script>
<!-- END PAGE LEVEL PLUGINS -->
<script src="~/Content/themes/admin/pages/scripts/ui-extended-modals.js"></script>
@*<script src="~/Scripts/adminJs/Brand.js"></script>*@

    <link href="~/Content/DatePicker/datepicker3.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/adminJs/PrintSetting.js"></script>
    <script>
        jQuery(document).ready(function () {
            activemenu('WEMPE_PrintSetting');
            Metronic.init(); // init metronic core components
            Layout.init(); // init current layout
            QuickSidebar.init(); // init quick sidebar
            Demo.init(); // init demo features
            UIExtendedModals.init();
            UIToastr.init();
        });

       
    </script>

    }