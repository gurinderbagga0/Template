@{
    ViewBag.Title = "Manage Conditions";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="#">Home</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#" id="HeaderConditionType">Case Type</a>
        </li>
    </ul>
</div>

<div id="BandType-list">
    @Html.Partial("_ConditionList")    
</div>

<!-- responsive -->
<div id="responsive" class="modal fade" tabindex="-1" data-width="760">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title" id="HManageCondition">Manage Condition Type</h4>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <h4>Brand</h4>
                <p>
                    @Html.DropDownList("drpBrands", (IEnumerable<SelectListItem>)ViewBag.Brand, "", new { @class = "form-control" })
                </p>
            </div><div class="col-md-6">
                <h4 id="HManageCondition2">Condition</h4>
                <p>
                    <input id="txtName" class="form-control" type="text">
                </p>
            </div>
            <div class="col-md-10">
                <h4>Active</h4>
                <p>
                    <input type="checkbox" checked="checked"  id="chkIsActive">
                </p>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal"  class="btn btn-default">Close</button>
        <button type="button" class="btn blue" onclick="Add();" >Save changes</button>
        <input type="hidden" id="hdnid" value="0" />
    </div>
</div>

<!-- BEGIN PAGE LEVEL STYLES onclick="Add();"-->
<link href="~/Content/themes/admin/plugins/bootstrap-modal/css/bootstrap-modal-bs3patch.css" rel="stylesheet" type="text/css"/>
<link href="~/Content/themes/admin/plugins/bootstrap-modal/css/bootstrap-modal.css" rel="stylesheet" type="text/css"/>

<!-- END PAGE LEVEL STYLES -->
@section scripts{
<script src="~/Content/themes/admin/plugins/bootstrap-modal/js/bootstrap-modalmanager.js" type="text/javascript"></script>
<script src="~/Content/themes/admin/plugins/bootstrap-modal/js/bootstrap-modal.js" type="text/javascript"></script>
<!-- END PAGE LEVEL PLUGINS -->
<script src="~/Content/themes/admin/pages/scripts/ui-extended-modals.js"></script>
<script src="~/Scripts/MasterJs/Condition.js"></script>
    <script>
        jQuery(document).ready(function () {


            $('#ManagList').addClass('open');
            $('#liManageItems').addClass('open');
            $('#liManageItems').find('span').addClass('open');


            $('#ManagList').find('.sub-menu:first').css('display', 'block');

            $('#liManageItems').find('.sub-menu').css('display', 'block');


            $('#spnArrowManageListMain').addClass('open');

           // activemenu('Wempe_BandType');






           // activemenu('WEMPE_Case');
            _sortColumn = 'LastUpdate';
            _sortOrder = 'DESC';
            getList(1);
            Metronic.init(); // init metronic core components
            Layout.init(); // init current layout
            QuickSidebar.init(); // init quick \ 
            Demo.init(); // init demo features
            UIExtendedModals.init();
            //UIToastr.init();
        });

        function validate() {
            var reason = "";
            reason += validateEmpty(document.getElementById('txtName'), 'Name required !');

            if (reason != "") {
                alert("Some fields need correction:\n" + reason);
                return false;
            }
            return true;
        }
    </script>
}

