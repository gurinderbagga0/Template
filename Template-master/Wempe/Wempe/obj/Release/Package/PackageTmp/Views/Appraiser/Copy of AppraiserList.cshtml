@model Wempe.Models.PagedData<Wempe.Models.AppraiserModel>

<!-- BEGIN EXAMPLE TABLE PORTLET-->
<div class="portlet box blue-hoki">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-grid"></i>Appraiser Listing
        </div>
        <div class="actions">
            @*<a class="btn btn-default btn-sm" >
                                                    <i class="fa fa-reply"></i>Delete All </a>*@
            <a data-toggle="modal" href="#responsive" class="btn green">
                <i class="fa fa-pencil"></i>Add new </a>
        </div>

    </div>
    <div class="portlet-body">
        <input type="hidden" id="hdnPageNo" value="1" />
        <div class="table-scrollable">
            <table class="table table-striped table-bordered table-hover" >
                <thead>
                    <tr>
                        <th>Name
                        </th>
                        <th>Update date
                        </th>
                        <th>
                            Updated by
                        </th>
                        <th width="14%">Action</th>
                    </tr>
                </thead>
                <tbody id="tbodyDetails">
                    @foreach (var person in Model.Data)
                    {
                        <tr>
                            <td>
                                @person.AppraiserTitle
                            </td>
                            <td>
                                @String.Format("{0:MM/dd/yy}", person.LastUpdate)

                            </td>
                            <td>
                                @person.UpdateByUserName
                            </td>
                            <td><a href="#" class="btn default btn-xs purple" onclick="Edit(@person.AppraiserID);">
                                <i class="fa fa-edit"></i>Edit </a>| 
										<a href="#"  class="btn default btn-xs black" onclick="ConfirmClick(@person.AppraiserID);">
                                            <i class="fa fa-trash-o"></i>Delete </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="row">
            
            <div class="col-md-12 col-sm-12">
                <div class="dataTables_paginate paging_simple_numbers" id="sample_1_paginate">
                    @for (int i = 1; i <= Model.NumberOfPages; i++)
                    {
                        <a class="page-number" href="#">@i</a>
                    }
                </div>
            </div>
        </div>

    </div>
</div>

<!-- END EXAMPLE TABLE PORTLET-->
