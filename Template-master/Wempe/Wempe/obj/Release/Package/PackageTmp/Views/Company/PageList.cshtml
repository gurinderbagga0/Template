<script>

    var _lockPayementHistory = true;

    function setPagingDetailPaymentHistory(noOfrows, Total, pageNo) {
        _firstRecord = 1;
        if (noOfrows < pazeSize) {
            noOfrows = Total;
            _firstRecord = Total;
            _lockPayementHistory = false;
        }
        else {
            noOfrows = noOfrows * pageNo;
