@{
    Layout = null;
}
@{
    string fontSize = this.ViewData.ContainsKey("fontSize") ? this.ViewData["fontSize"].ToString() : string.Empty;
    string displayPrice = this.ViewData.ContainsKey("displayPrice") ? this.ViewData["displayPrice"].ToString() : string.Empty;
    string documentStatus = this.ViewData.ContainsKey("documentStatus") ? this.ViewData["documentStatus"].ToString() : string.Empty;
    string rowSpacer = this.ViewData.ContainsKey("rowSpacer") ? this.ViewData["rowSpacer"].ToString() : string.Empty;
}
<table class="tdStyle_table" style="font-family:'Times New Roman';width:100%; font-size:12px;" border="0" cellpadding="0" cellspacing="0"  >
                                                    @if (Model.itemDetail.task1Description != null)
                                                    {
                                                    <tr>
                                                        <td style="width:78%;" valign="top">
                                                            <span style="white-space: pre-line">@Model.itemDetail.task1Description</span>
                                                            @if (Model.itemDetail.task1Decline == "1")
                                                            {
                                                                 @Html.Raw("&nbsp;&nbsp;<b>(Declined by client)</b>")
                                                            }
                                                        </td>
                                                        <td style="width:6%;" valign="top">&nbsp;</td>
                                                        <td style="width:16%;" valign="top"  align="right">
                                                      @if (displayPrice != "noPrice")
                                                        {
                                                            if (Model.itemDetail.task1Decline == "1")
                                                            {
                                                                 @Html.Raw("<strike>" + String.Format("{0:C}", + (Convert.ToDecimal(Model.itemDetail.task1Price)+Convert.ToDecimal(Model.itemDetail.task2Price))) + "</strike>")
                                                            }
                                                            else
                                                            {
                                                                 @Html.Raw(String.Format("{0:C}", + (Convert.ToDecimal(Model.itemDetail.task1Price)+Convert.ToDecimal(Model.itemDetail.task2Price))))
                                                            }
                                                        }

                                                        </td>
                                                    </tr>
                                                        if (rowSpacer == "rowSpacer") { @Html.Raw("<tr><td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td></tr>")}
                                                    }
                                                     
</table>
@if (documentStatus == "offer")
{
     <table border="0" width="100%" cellspacing="0" cellpadding="0">
         <tr>
             <td width="100%" colspan="4"><font face="Times New Roman" size="@fontSize">Proceed with above work.</font></td>
             </tr>
    <tr>
             <td width="10%" align="left"><font face="Times New Roman" size="@fontSize" >Sign</font></td>
             
             <td width="35%" valign="bottom"><img src="~/Images/lineSignature.jpg" border="0" width="150" height="2"/></td>
             <td width="10%" ><font face="Times New Roman" size="@fontSize" >Date</font></td>
             <td width="15%" valign="bottom"><img src="~/Images/lineDate.jpg" border="0" width="70" height="2"/></td>
         </tr>
     </table>
}