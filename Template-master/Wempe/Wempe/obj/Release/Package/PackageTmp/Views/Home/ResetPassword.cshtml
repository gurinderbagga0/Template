<!-- BEGIN LOGIN -->
       @if (ViewBag.linkexpired == false)
       {
<div class="content">
	<!-- BEGIN LOGIN FORM -->
@using (Html.BeginForm("ResetPassword", "Home", FormMethod.Post, new { @class = "login-form" }))
{  @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
		<h3 class="form-title">Reset Password</h3>
		<div class="alert alert-danger display-hide">
			<button class="close" data-close="alert"></button>
			<span>
                
                @Html.HiddenFor(model => model.ReturnUrl)
			Enter any username and password. </span>
		</div>
		<div class="form-group">
			<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
			<label class="control-label visible-ie8 visible-ie9">Username</label>
		    @Html.TextBoxFor(Model => Model.EmailAddress, new { placeholder = "Username", autocomplete = "off", @class = "form-control form-control-solid placeholder-no-fix" })
               @Html.ValidationMessageFor(model => model.EmailAddress)
		</div>
		<div class="form-group">
			<label class="control-label visible-ie8 visible-ie9">Password</label>
		      @Html.PasswordFor(Model => Model.Password, new { placeholder = "password", autocomplete = "off", @class = "form-control form-control-solid placeholder-no-fix" })
             @Html.ValidationMessageFor(model => model.Password)
		</div>
		<div class="form-actions"><a href="@Url.Action("Login", "Home")"> Login</a> | 
			<button type="submit" class="btn btn-success uppercase">Reset </button>
			
            @Html.ValidationMessage("LogOnError") 
		</div>
		
		
}
	
	
</div>
       }
       else
       {
           <div class="content">
	<!-- BEGIN LOGIN FORM -->
@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "login-form" }))
{  @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
		<h3 class="form-title">Link Expired!</h3>
		
		<div class="form-actions">
			<a href="javascript:;" id="forget-password" class="forget-password">Resend link </a>
			
            @Html.ValidationMessage("LogOnError") 
		</div>
		
		
}
	<!-- END LOGIN FORM -->
	<!-- BEGIN FORGOT PASSWORD FORM -->
    <div id="ForgotPassword" class="forget-form">
		<h3>Forgot Password ?</h3>
		<p>
			 Enter your e-mail address below to get your password on mail.
		</p>
		<div class="form-group">
			<input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Email" id="forgotEmailAddress" style="text-transform:none;"/>
		</div>
		<div class="form-actions">
			<a href="@Url.Action("Login", "Home")"> Login</a>
			<button type="submit" id="forgot-btn" class="btn btn-success uppercase pull-right">Submit</button>
		</div>
 </div>
	<!-- END FORGOT PASSWORD FORM -->
	
</div>
       }
